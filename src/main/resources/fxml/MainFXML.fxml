<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="ni.edu.uni.fcys.programacion2.conversionfx.MainFXMLController">
    <stylesheets>
        <URL value="@/styles/temperaturefxml.css" />
    </stylesheets>
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <left>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" style="-fx-border-color: Gray;" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnTemperature" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#btnTemperatureAction" prefHeight="100.0" prefWidth="90.0" text="Temperature">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="btnCurrency" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#btnCurrencyAction" prefHeight="100.0" prefWidth="90.0" text="Currency" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </left>
         <center>
            <VBox fx:id="VBoxCenter" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
